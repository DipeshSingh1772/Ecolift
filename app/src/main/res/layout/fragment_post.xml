<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:background="@drawable/post_form_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/pickup_dot"
                android:contentDescription="@string/green_indicator"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/pickup_text"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:inputType="text"
                android:autofillHints="name"
                android:hint="@string/pickup"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:background="@drawable/post_form_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:contentDescription="@string/red_indicator"
                android:src="@drawable/destination_dot"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/destination_text"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:inputType="text"
                android:autofillHints="name"
                android:hint="@string/destination"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:baselineAligned="false"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@drawable/post_form_background"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/date_icon"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:contentDescription="@string/date"
                    android:layout_height="wrap_content"
                    android:src="@drawable/date_icon"
                    android:layout_gravity="center"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:text="@string/date"
                    android:gravity="start|center"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/post_form_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/time_icon"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/time_icon"
                    android:contentDescription="@string/time"
                    android:layout_gravity="center"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="0dp"
                    android:text="@string/time"
                    android:gravity="center|start"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@color/white"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:background="@drawable/post_form_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/person_icon"
                android:contentDescription="@string/person"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/name_text"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:inputType="text"
                android:hint="@string/name"
                android:autofillHints="name"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:background="@drawable/post_form_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/phone_icon"
                android:contentDescription="@string/phone"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/mobileNo_text"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:inputType="text"
                android:autofillHints="phone"
                android:hint="@string/mobile_no"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:background="@drawable/post_form_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/email"
                android:layout_height="wrap_content"
                android:src="@drawable/mail_icon"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/email_text"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:inputType="text"
                android:autofillHints="emailAddress"
                android:hint="@string/email"
                android:singleLine="true"
                tools:ignore="TextFields" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:baselineAligned="false"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@drawable/post_form_background"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:contentDescription="@string/seats"
                    android:layout_height="wrap_content"
                    android:src="@drawable/group_icon"
                    android:layout_gravity="center"
                    tools:ignore="NestedWeights" />

                <EditText
                    android:id="@+id/seat_text"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:inputType="text"
                    android:hint="@string/seats"
                    android:autofillHints="creditCardExpirationDay"
                    android:layout_marginStart="10dp"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/post_form_background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/money_icon"
                    android:layout_gravity="center"
                    android:contentDescription="@string/Amount"
                    tools:ignore="NestedWeights" />

                <EditText
                    android:id="@+id/amount_text"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:inputType="text"
                    android:layout_marginStart="10dp"
                    android:hint="@string/amount"
                    android:autofillHints="creditCardSecurityCode"
                    android:singleLine="true" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/post_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"
                android:text="@string/post" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>